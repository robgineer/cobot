    <!-- the virtual links (defined for readbility)
    We follow the following structure:
    link_0 -> ... -> link_n -> flange -> tool_base
                                            -> gripper_tcp
                                            -> vacuump_up_tcp
                                            -> vacuum_down_tcp
    This enables independent tool center points (one per tool)
    -->

    <link name="flange"/>
    <link name="tool_base"/>

    <link name="gripper_tcp"/>
    <link name="vacuum_up_tcp"/>
    <link name="vacuum_down_tcp"/>

